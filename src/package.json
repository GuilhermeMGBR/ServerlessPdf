{
  "name": "serverless-pdf",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "scripts": {
    "prepare": "cd .. && husky install",
    "format": "yarn base:prettier --write .",
    "format-check": "yarn base:prettier --check .",
    "lint": "eslint .",
    "type-check": "tsc -noEmit",
    "watch:type-check": "tsc -noEmit -w",
    "build": "yarn build:only",
    "postbuild": "find . -maxdepth 2 -name '*function.json' | xargs -I {} cp {} ../dist/{}; cp host.json .funcignore package.json yarn.lock local.settings.json ../dist; cd ../dist; yarn install --production",
    "build:only": "npx babel . --extensions '.ts,.tsx' --out-dir ../dist",
    "watch:build": "yarn build -w",
    "prestart": "yarn build",
    "start": "yarn start:only",
    "start:only": "cd ../dist; func start",
    "test": "jest --verbose",
    "watch:test": "jest --verbose --watch",
    "watch:test-onlyChanged": "jest --verbose --watch --onlyChanged",
    "coverage": "jest --coverage",
    "sonar": "yarn coverage; yarn sonar:only",
    "sonar:only": "npx sonarqube-scanner",
    "sonar-server:start": "docker run --name sonarqube-server -p 127.0.0.1:9000:9000 --detach --rm sonarqube:lts-community",
    "sonar-server:start-persistent": "docker run --name sonarqube-server -p 127.0.0.1:9000:9000 --detach --rm --env-file .env.sonar-server.local sonarqube:lts-community",
    "pre-commit": "yarn type-check && yarn lint && yarn format-check && yarn test",
    "f": "yarn format",
    "fc": "yarn format-check",
    "l": "yarn lint",
    "tc": "yarn type-check",
    "wtc": "yarn watch:type-check",
    "b": "yarn build",
    "bo": "yarn build:only",
    "wb": "yarn watch:build",
    "s": "yarn start",
    "so": "yarn start:only",
    "t": "yarn test",
    "wt": "yarn watch:test",
    "wto": "yarn watch:test-onlyChanged",
    "c": "yarn coverage",
    "sn": "yarn sonar",
    "sno": "yarn sonar:only",
    "ss": "yarn sonar-server:start",
    "ssp": "yarn sonar-server:start-persistent",
    "pc": "yarn pre-commit",
    "base:prettier": "yarn prettier --ignore-path .gitignore '!coverage'"
  },
  "dependencies": {},
  "devDependencies": {
    "@azure/functions": "^3.0.0",
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.11",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.11",
    "@types/jest": "^29.5.4",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.4.1",
    "azure-functions-core-tools": "^4.x",
    "babel-plugin-inline-json-import": "^0.3.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.48.0",
    "husky": "^8.0.0",
    "jest": "^29.6.4",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jestSonar": {
    "reportPath": "../jest-reports",
    "reportFile": "test-report.xml",
    "indent": 2
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ]
  }
}
