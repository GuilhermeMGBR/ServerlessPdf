{
  "name": "serverless-pdf",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "scripts": {
    "format": "yarn prettier --write .",
    "format-check": "yarn prettier --check .",
    "lint": "eslint .",
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "func start",
    "test": "echo \"No tests yet...\""
  },
  "dependencies": {},
  "devDependencies": {
    "@azure/functions": "^3.0.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.4.1",
    "azure-functions-core-tools": "^4.x",
    "eslint": "^8.48.0",
    "prettier": "^3.0.2",
    "typescript": "^4.0.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ]
  }
}
