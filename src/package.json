{
  "name": "serverless-pdf",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "scripts": {
    "prepare": "cd .. && husky install",
    "format": "yarn prettier --write .",
    "format-check": "yarn prettier --check .",
    "lint": "eslint .",
    "type-check": "tsc -noEmit",
    "watch:type-check": "tsc -noEmit -w",
    "build": "tsc",
    "watch:build": "tsc -w",
    "prestart": "yarn build",
    "start": "func start",
    "test": "echo \"No tests yet...\"",
    "pre-commit": "yarn type-check && yarn lint && yarn format-check && yarn test",
    "f": "yarn format",
    "fc": "yarn format-check",
    "l": "yarn lint",
    "tc": "yarn type-check",
    "wtc": "yarn watch:type-check",
    "b": "yarn build",
    "wb": "yarn watch:build",
    "s": "yarn start",
    "t": "yarn test",
    "pc": "yarn pre-commit"
  },
  "dependencies": {},
  "devDependencies": {
    "@azure/functions": "^3.0.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.4.1",
    "azure-functions-core-tools": "^4.x",
    "eslint": "^8.48.0",
    "prettier": "^3.0.2",
    "typescript": "^4.0.0",
    "husky": "^8.0.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ]
  }
}
